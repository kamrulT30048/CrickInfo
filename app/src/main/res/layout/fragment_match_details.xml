        <TextView
            android:id="@+id/tv_match_umpire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/olive_light_0"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/match_umpire"
            android:textColor="@color/olive_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_team_squad"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_first_umpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_match_umpire"
            tools:text="@string/umpire" />

        <TextView
            android:id="@+id/tv_second_umpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_first_umpire"
            tools:text="@string/umpire" />

        <TextView
            android:id="@+id/tv_tv_umpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
